{
    "name": "webfiori/framework",
    "description": "WebFiori framework. Made to make the web bloom.",
    "homepage": "https://webfiori.com",
    "version": "3.0.0-Beta.30",
    "type": "library",
    "support": {
        "issues": "https://github.com/webfiori/framework/issues",
        "source": "https://github.com/webfiori/framework"
    },
    "authors": [
        {
            "name": "Ibrahim BinAlshikh",
            "email": "ibrahim@webfiori.com",
            "homepage": "https://ibrahim-binalshikh.me",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-openssl": "*",
        "webfiori/cache": "v2.0.*",
        "webfiori/http": "v4.0.*",
        "webfiori/file": "v2.0.*",
        "webfiori/jsonx": "v4.0.*",
        "webfiori/ui": "v4.0.*",
        "webfiori/collections": "v2.0.*",
        "webfiori/database": "v1.1.*",
        "webfiori/cli": "v2.0.*",
        "webfiori/mailer": "v2.1.*",
        "webfiori/err": "v2.0.*"
    },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test10": "phpunit --configuration tests/phpunit10.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "WebFiori\\Framework\\": "WebFiori/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WebFiori\\Tests\\": "tests/"
        }
    },
    "keywords": [
        "framework",
        "webfiori",
        "php",
        "API",
        "Web APIs",
        "Themes"
    ],
    "license": "MIT"
}
