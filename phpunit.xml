<?xml version="1.0" encoding="UTF-8"?>
<phpunit stderr="true" colors="true" bootstrap="bootstrap.php">
    <php>
        <server name="HTTP_HOST" value="127.0.0.1"/>
        <server name="REMOTE_ADDR" value="127.0.0.1"/>
    </php>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <file>./src/logic/Controller.php</file>
            <file>./src/entity/cron/CronJob.php</file>
            <file>./src/entity/router/RouterUri.php</file>
            <file>./src/entity/langs/Language.php</file>
            <file>./src/entity/Access.php</file>
            <file>./src/entity/DBConnectionInfo.php</file>
            <file>./src/entity/File.php</file>
            <file>./src/entity/Privilege.php</file>
            <file>./src/entity/PrivilegesGroup.php</file>
            <file>./src/entity/User.php</file>
            <file>./src/entity/Page.php</file>
            <file>./src/entity/Theme.php</file>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
    <testsuites>
        <testsuite name="Language Tests">
            <directory>./tests/entity/langs/</directory>
        </testsuite>
        <testsuite name="Entity Tests">
            <directory>./tests/entity/</directory>
        </testsuite>
        <testsuite name="Config Files Tests">
            <directory>./tests/conf/</directory>
        </testsuite>
        <testsuite name="Router Tests">
            <directory>./tests/entity/router/</directory>
        </testsuite>
        <testsuite name="Controller Tests">
            <directory>./tests/logic/</directory>
        </testsuite>
    </testsuites>
</phpunit>