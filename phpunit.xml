<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="tests/bootstrap.php">
    <php>
        <server name="HTTP_HOST" value="localhost"/>
    </php>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src/conf</directory>
            <directory suffix=".php">./src/entity/cron</directory>
            <directory suffix=".php">./src/entity/router</directory>
            <directory suffix=".php">./src/entity/mail</directory>
            <directory suffix=".php">./src/entity/functions</directory>
            <file>./src/entity/langs/Language.php</file>
            <file>./src/entity/Access.php</file>
            <file>./src/entity/Autoloader.php</file>
            <file>./src/entity/DBConnectionFactory.php</file>
            <file>./src/entity/DBConnectionInfo.php</file>
            <file>./src/entity/DatabaseSchema.php</file>
            <file>./src/entity/ExtendedWebAPI.php</file>
            <file>./src/entity/File.php</file>
            <file>./src/entity/FileHandler.php</file>
            <file>./src/entity/Page.php</file>
            <file>./src/entity/Privilege.php</file>
            <file>./src/entity/PrivilegesGroup.php</file>
            <file>./src/entity/Theme.php</file>
            <file>./src/entity/Uploader.php</file>
            <file>./src/entity/User.php</file>
            <file>./src/entity/Util.php</file>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="clover.xml"/>
    </logging>
    <testsuites>
        <testsuite name="Router Tests">
            <directory>./tests/entity/router/</directory>
        </testsuite>
    </testsuites>
</phpunit>